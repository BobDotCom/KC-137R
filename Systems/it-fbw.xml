<?xml version="1.0"?>

<!-- Wing Leveller/Pitch Stabilization Augmentation System -->

<PropertyList>

 <!-- =============================================================== -->
 <!-- Lateral                                                         -->
 <!-- =============================================================== -->
 
	<filter>
		<debug>false</debug>
		<type>noise-spike</type>
		<input>/controls/flight/aileron</input>
		<output>/controls/flight/aileron-command</output>
		<max-rate-of-change>2.5</max-rate-of-change>
	</filter>
 
    <filter>
       <name>IT-CONTROLLER: ROLL</name>
        <type>gain</type>
        <gain>1</gain>
        <update-interval-secs type="double">0.05</update-interval-secs>
        <input> 
            <expression>
                <table>
                    <property>/controls/flight/aileron-command</property> 
                    <entry><ind>-1.00</ind><dep>-12.0</dep></entry>
                    <entry><ind>-0.04</ind><dep>  0.0</dep></entry>
                    <entry><ind> 0.00</ind><dep>  0.0</dep></entry>
                    <entry><ind> 0.04</ind><dep>  0.0</dep></entry>
                    <entry><ind> 1.00</ind><dep> 12.0</dep></entry>
                </table>
            </expression>
        </input>
		<output>/it-fbw/roll-rate</output>
    </filter>
	
	<filter>
		<name>IT-FBW: ROLL KP (P Gain)</name>
		<type>gain</type>
		<gain>1</gain>
		<input>
			<expression>
				<table>
					<property>/velocities/mach</property>
					<entry><ind>0.2</ind><dep>0.18</dep></entry>
					<entry><ind>0.9</ind><dep>0.11</dep></entry>
				</table>
			</expression>
		</input>
		<output>/it-fbw/roll-kp</output>
	</filter>
	
	<pid-controller>
		<name>IT-CONTROLLER: ROLL</name>
		<debug>false</debug>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/gear/gear[1]/wow</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/gear/gear[2]/wow</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/it-fbw/roll-disable</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>
			<property>/orientation/roll-rate-degps</property>
		</input>
		<reference>
			<condition>
				<or>
					<equals>
						<property>/it-autoflight/output/ap1</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/output/ap2</property>
						<value>1</value>
					</equals>
				</or>
			</condition>
			<property>/it-autoflight/internal/roll-rate</property>
		</reference>
		<reference>
			<property>/it-fbw/roll-rate</property>
		</reference>
		<output>
			<property>/controls/flight/aileron-fbw-cmd</property>
		</output>
		<config>
			<Kp>
				<property>/it-fbw/roll-kp</property>
			</Kp>
			<beta>1</beta>
			<alpha>0.1</alpha>
			<gamma>0</gamma>
			<Ti>0.45</Ti>
			<Td>0.005</Td>
			<u_min>-1</u_min>
			<u_max>1</u_max>
		</config>
	</pid-controller>
	
	<filter>
		<name>IT-FBW: ROLL OPTION</name>
		<debug>false</debug>
		<feedback-if-disabled>true</feedback-if-disabled>
		<initialize-to>output</initialize-to>
		<input>
			<condition>
				<and>
					<equals>
						<property>/gear/gear[1]/wow</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/gear/gear[2]/wow</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/it-fbw/roll-disable</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
			<property>/controls/flight/aileron-fbw-cmd</property>
		</input>
		<input>
			<condition>
				<or>
					<equals>
						<property>/gear/gear[1]/wow</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/gear/gear[2]/wow</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-fbw/roll-disable</property>
						<value>1</value>
					</equals>
				</or>
			</condition>
			<property>/controls/flight/aileron</property>
		</input>
		<output>/controls/flight/aileron-fbw</output>
		<type>noise-spike</type>
		<max-rate-of-change>10</max-rate-of-change>
	</filter>
	
 <!-- =============================================================== -->
 <!-- Vertical                                                        -->
 <!-- =============================================================== -->
 
	<filter>
		<debug>false</debug>
		<type>noise-spike</type>
		<input>/controls/flight/elevator</input>
		<output>/controls/flight/elevator-command</output>
		<max-rate-of-change>2.5</max-rate-of-change>
	</filter>
	
	<filter>
		<name>IT-CONTROLLER: LOAD FACTOR CMD</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<expression>
				<sum>
					<table>
						<property>/controls/flight/elevator-command</property> 
						<entry><ind> 1</ind><dep>0.0</dep></entry>
						<entry><ind> 0</ind><dep>1.0</dep></entry>
						<entry><ind>-1</ind><dep>2.0</dep></entry>
					</table>
				</sum>
			</expression>
		</input>
		<output>/it-fbw/g-target</output>
		<min>0.0</min>
		<max>2.0</max>
	</filter>
	
	<filter>
		<name>IT-CONTROLLER: COMPUTED G</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<expression>
				<sum>
					<property>/accelerations/pilot-gdamped</property>
					<div>
						<value>-1</value>
						<cos>
							<deg2rad>
								<product>
									<property>/orientation/roll-deg</property>
									<value>0.965</value>
								</product>
							</deg2rad>
						</cos>
					</div>
					<value>1</value>
				</sum>
			</expression>
		</input>
		<output>/it-fbw/g-computed</output>
	</filter>
	
	<filter>
		<name>IT-CONTROLLER: G ERROR</name>
		<type>gain</type>
		<gain>-1.0</gain>
		<input>
			<expression>
				<dif>
					<property>/it-fbw/g-target</property>
					<property>/it-fbw/g-computed</property>
				</dif>
			</expression>
		</input>
		<output>/it-fbw/g-error</output>
	</filter>
	
	<pi-simple-controller>
		<name>IT-CONTROLLER: G ELEVATOR</name>
		<debug>false</debug>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/gear/gear[1]/wow</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/gear/gear[2]/wow</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/it-fbw/pitch-disable</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>
			<property>/it-fbw/g-error</property>
		</input>
		<reference>
			<value>0</value>
		</reference>
		<output>
			<property>/it-fbw/g-elevator</property>
		</output>
		<config>
			<Kp>-1.5</Kp>
			<Ki>-1.5</Ki>
			<min>
				<condition>
					<less-than>
						<property>/controls/flight/elevator-command</property>
						<value>0</value>
					</less-than>
				</condition>
				<property>/controls/flight/elevator-command</property>
			</min>
			<min>0.0</min>
			<max>
				<condition>
					<greater-than>
						<property>/controls/flight/elevator-command</property>
						<value>0</value>
					</greater-than>
				</condition>
				<property>/controls/flight/elevator-command</property>
			</max>
			<max>0.0</max>
		</config>
	</pi-simple-controller>
	
    <filter>
       <name>IT-CONTROLLER: PITCH</name>
        <type>gain</type>
        <gain>1</gain>
        <update-interval-secs type="double">0.05</update-interval-secs>
        <input> 
            <expression>
                <table>
                    <property>/it-fbw/g-elevator</property> 
                    <entry><ind> 1.00</ind><dep>-6.0</dep></entry>
                    <entry><ind> 0.04</ind><dep> 0.0</dep></entry>
                    <entry><ind> 0.00</ind><dep> 0.0</dep></entry>
                    <entry><ind>-0.04</ind><dep> 0.0</dep></entry>
                    <entry><ind>-1.00</ind><dep> 6.0</dep></entry>
                </table>
            </expression>
        </input>
		<output>/it-fbw/pitch-rate</output>
    </filter>
	
	<filter>
		<name>IT-FBW: PITCH KP (P Gain)</name>
		<type>gain</type>
		<gain>1</gain>
		<input>
			<expression>
				<table>
					<property>/velocities/mach</property>
					<entry><ind>0.2</ind><dep>-0.18</dep></entry>
					<entry><ind>0.9</ind><dep>-0.12</dep></entry>
				</table>
			</expression>
		</input>
		<output>/it-fbw/pitch-kp</output>
	</filter>
	
	<pid-controller>
		<name>IT-FBW: PITCH</name>
		<debug>false</debug>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/gear/gear[1]/wow</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/gear/gear[2]/wow</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/it-fbw/pitch-disable</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>
			<property>/orientation/pitch-rate-degps</property>
		</input>
		<reference>
			<condition>
				<or>
					<equals>
						<property>/it-autoflight/output/ap1</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/output/ap2</property>
						<value>1</value>
					</equals>
				</or>
			</condition>
			<property>/it-autoflight/internal/pitch-rate</property>
		</reference>
		<reference>
			<property>/it-fbw/pitch-rate</property>
		</reference>
		<output>
			<property>/controls/flight/elevator-fbw-cmd</property>
		</output>
		<config>
			<Kp>
				<property>/it-fbw/pitch-kp</property>
			</Kp>
			<beta>1</beta>
			<alpha>0.1</alpha>
			<gamma>0</gamma>
			<Ti>0.45</Ti>
			<Td>0.002</Td>
			<u_min>-1</u_min>
			<u_max>1</u_max>
		</config>
	</pid-controller>
	
	<filter>
		<name>IT-FBW: PITCH OPTION</name>
		<debug>false</debug>
		<feedback-if-disabled>true</feedback-if-disabled>
		<initialize-to>output</initialize-to>
		<input>
			<condition>
				<and>
					<equals>
						<property>/gear/gear[1]/wow</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/gear/gear[2]/wow</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/it-fbw/pitch-disable</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
			<property>/controls/flight/elevator-fbw-cmd</property>
		</input>
		<input>
			<condition>
				<or>
					<equals>
						<property>/gear/gear[1]/wow</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/gear/gear[2]/wow</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-fbw/pitch-disable</property>
						<value>1</value>
					</equals>
				</or>
			</condition>
			<property>/controls/flight/elevator</property>
		</input>
		<output>/controls/flight/elevator-fbw</output>
		<type>noise-spike</type>
		<max-rate-of-change>10</max-rate-of-change>
	</filter>
	
	<filter>
		<name>IT-FBW: PITCH TRIM</name>
		<debug>false</debug>
		<feedback-if-disabled>true</feedback-if-disabled>
		<initialize-to>output</initialize-to>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/gear/gear[1]/wow</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/gear/gear[2]/wow</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/it-fbw/pitch-disable</property>
						<value>0</value>
					</equals>
					<greater-than-equals>
						<property>/position/gear-agl-ft</property>
						<value>50</value>
					</greater-than-equals>
					<or>
						<greater-than>
							<property>/controls/flight/elevator-fbw</property>
							<value>0.2</value>
						</greater-than>
						<less-than>
							<property>/controls/flight/elevator-fbw</property>
							<value>-0.2</value>
						</less-than>
					</or>
				</and>
			</condition>
		</enable>
		<input>
			<condition>
				<greater-than>
					<property>/controls/flight/elevator-fbw</property>
					<value>0.2</value>
				</greater-than>
			</condition>
			<value>1</value>
		</input>
		<input>
			<condition>
				<less-than>
					<property>/controls/flight/elevator-fbw</property>
					<value>-0.2</value>
				</less-than>
			</condition>
			<value>-1</value>
		</input>
		<output>/controls/flight/elevator-trim</output>
		<type>noise-spike</type>
		<max-rate-of-change>0.01</max-rate-of-change>
	</filter>
	
 <!-- =============================================================== -->
 <!-- Yaw Damper                                                      -->
 <!-- =============================================================== -->

	<filter>
		<name>IT-FBW: YAW DAMPER/TURN COORDINATOR FEEDBACK IF DISABLED</name>
		<enable>
			<condition>
				<or>
					<equals>
						<property>/gear/gear[1]/wow</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/gear/gear[2]/wow</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-fbw/roll-disable</property>
						<value>1</value>
					</equals>
					<greater-than-equals>
						<property>/controls/flight/rudder</property>
						<value>0.1</value>
					</greater-than-equals>
					<less-than-equals>
						<property>/controls/flight/rudder</property>
						<value>-0.1</value>
					</less-than-equals>
					<less-than>
						<property>/position/gear-agl-ft</property>
						<value>50</value>
					</less-than>
				</or>
			</condition>
		</enable>
		<type>gain</type>
		<gain>1</gain>
		<input>0</input>
		<output>/controls/flight/rudder-fbw-cmd</output>
		<min>-0.2</min>
		<max>0.2</max>
	</filter>
	
	<pid-controller>
		<name>IT-FBW: YAW</name>
		<debug>false</debug>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/gear/gear[1]/wow</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/gear/gear[2]/wow</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/it-fbw/roll-disable</property>
						<value>0</value>
					</equals>
					<less-than>
						<property>/controls/flight/rudder</property>
						<value>0.1</value>
					</less-than>
					<greater-than>
						<property>/controls/flight/rudder</property>
						<value>-0.1</value>
					</greater-than>
					<greater-than-equals>
						<property>/position/gear-agl-ft</property>
						<value>50</value>
					</greater-than-equals>
				</and>
			</condition>
		</enable>
		<input>
			<property>/instrumentation/slip-skid-ball/indicated-slip-skid</property>
		</input>
		<reference>
			<value>0</value>
		</reference>
		<output>
			<property>/controls/flight/rudder-fbw-cmd</property>
		</output>
		<config>
			<Kp>0.025</Kp>
			<beta>1</beta>
			<alpha>0.1</alpha>
			<gamma>0</gamma>
			<Ti>5.0</Ti>
			<Td>0.00001</Td>
			<u_min>-0.2</u_min>
			<u_max>0.2</u_max>
		</config>
	</pid-controller>
	
	<filter>
		<name>IT-FBW: RUDDER OPTION</name>
		<debug>false</debug>
		<feedback-if-disabled>true</feedback-if-disabled>
		<initialize-to>output</initialize-to>
		<input>
			<condition>
				<and>
					<equals>
						<property>/gear/gear[1]/wow</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/gear/gear[2]/wow</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/it-fbw/roll-disable</property>
						<value>0</value>
					</equals>
					<less-than>
						<property>/controls/flight/rudder</property>
						<value>0.1</value>
					</less-than>
					<greater-than>
						<property>/controls/flight/rudder</property>
						<value>-0.1</value>
					</greater-than>
					<greater-than-equals>
						<property>/position/gear-agl-ft</property>
						<value>50</value>
					</greater-than-equals>
				</and>
			</condition>
			<property>/controls/flight/rudder-fbw-cmd</property>
		</input>
		<input>
			<condition>
				<or>
					<equals>
						<property>/gear/gear[1]/wow</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/gear/gear[2]/wow</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-fbw/roll-disable</property>
						<value>1</value>
					</equals>
					<greater-than-equals>
						<property>/controls/flight/rudder</property>
						<value>0.1</value>
					</greater-than-equals>
					<less-than-equals>
						<property>/controls/flight/rudder</property>
						<value>-0.1</value>
					</less-than-equals>
					<less-than>
						<property>/position/gear-agl-ft</property>
						<value>50</value>
					</less-than>
				</or>
			</condition>
			<property>/controls/flight/rudder</property>
		</input>
		<output>/controls/flight/rudder-fbw</output>
		<type>noise-spike</type>
		<max-rate-of-change>10</max-rate-of-change>
	</filter>

</PropertyList>
