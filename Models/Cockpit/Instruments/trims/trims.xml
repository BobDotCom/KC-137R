<?xml version="1.0" encoding="UTF-8" ?>

<PropertyList>

	<path>trims.ac</path>
	
	<animation>
    <type>scale</type>
    <x-offset>0.8</x-offset>
    <y-offset>0.8</y-offset>
    <z-offset>0.8</z-offset>
    </animation>
	
    <animation>
        <type>translate</type>
        <object-name>ruddertrim.needle</object-name>
        <property>controls/flight/rudder-trim</property>
        <factor>0.0336</factor>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>
	
    <animation>
        <type>translate</type>
        <object-name>ailerontrim.needle</object-name>
        <property>controls/flight/aileron-trim</property>
        <factor>0.0336</factor>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>
	
    <animation>
        <type>rotate</type>
        <object-name>Rudder.trim</object-name>
        <property>controls/flight/rudder-trim</property>
        <factor>90</factor>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>0.028</x>
            <y>0</y>
            <z>-1</z>
        </axis>
    </animation>
	
    <animation>
        <type>pick</type>
        <object-name>Rudder.trim</object-name>
        <action>
            <button>0</button>
            <button>3</button>
            <repeatable>true</repeatable>
            <interval-sec>0.1</interval-sec>
             <binding>
             <command>property-adjust</command>
            <property>controls/flight/rudder-trim</property>
            <step>0.01</step>
            <min>-1.0</min>
            <max>1.0</max>
            <wrap>0</wrap>
            </binding>
        </action>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>Rudder.trim</object-name>
        <action>
            <button>1</button>
            <button>4</button>
            <repeatable>true</repeatable>
            <interval-sec>0.1</interval-sec>
             <binding>
             <command>property-adjust</command>
            <property>controls/flight/rudder-trim</property>
            <step>-0.01</step>
            <min>-1.0</min>
            <max>1.0</max>
            <wrap>0</wrap>
            </binding>
        </action>
    </animation>
	
    <animation>
        <type>pick</type>
        <object-name>aileron_trim</object-name>
        <action>
                <button>0</button>
                <repeatable>true</repeatable>
                <binding>
                        <command>property-adjust</command>
                        <property>controls/flight/aileron-trim</property>
                        <step>0.05</step>
                        <min>-0.5</min>
                        <max>0.5</max>
                </binding>
                <binding>
                        <command>property-assign</command>
                        <property>controls/switches/aileron-trim</property>
                        <value>1</value>
                </binding>
                <mod-up>
                    <binding>
                        <command>property-assign</command>
                        <property>controls/switches/aileron-trim</property>
                        <value>0</value>
                    </binding>
                </mod-up>
        </action>
        <action>
                <button>1</button>
                <repeatable>true</repeatable>
                <binding>
                        <command>property-adjust</command>
                        <property>controls/flight/aileron-trim</property>
                        <step>-0.05</step>
                        <min>-0.5</min>
                        <max>0.5</max>
                </binding>
                <binding>
                        <command>property-assign</command>
                        <property>controls/switches/aileron-trim</property>
                        <value>-1</value>
                </binding>
                <mod-up>
                    <binding>
                        <command>property-assign</command>
                        <property>controls/switches/aileron-trim</property>
                        <value>0</value>
                    </binding>
                </mod-up>
        </action>
    </animation>
	
    <animation>
        <type>rotate</type>
        <object-name>aileron_trim</object-name>
        <property>controls/switches/aileron-trim</property>
        <factor>-20</factor>
        <center>
            <x-m> 0</x-m>
            <y-m>-0.07</y-m>
            <z-m> 0</z-m>
        </center>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

</PropertyList>