
<PropertyList>

 <path>accelerometer.ac</path>
 
<animation>
    <type>scale</type>
    <x-offset>0.78</x-offset>
    <y-offset>0.78</y-offset>
    <z-offset>0.78</z-offset>
    </animation>

	<animation>
		<type>material</type>
			<object-name>min.needle</object-name>
			<object-name>max.needle</object-name>
			<object-name>accelerometer.needle</object-name>
			<object-name>accelerometer</object-name>
		<condition>
			<less-than><property>systems/electrical/outputs/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.6</red>
			<green>0.4</green>
			<blue>0.3</blue>
			<factor-prop>/systems/electrical/outputs/panel-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
			<object-name>min.needle</object-name>
			<object-name>max.needle</object-name>
			<object-name>accelerometer.needle</object-name>
			<object-name>accelerometer</object-name>
		<condition>
			<not><property>sim/rendering/rembrandt/enabled</property></not>
			<property>systems/electrical/outputs/cabin-dim</property>
		</condition>
		<emission>
		  <red>0.8</red>
		  <green>0.8</green>
		  <blue>0.8</blue>
		  <factor-prop>/systems/electrical/outputs/cabin-dim</factor-prop>
		</emission>
	</animation>
	
 <animation>
  <type>rotate</type>
  <object-name>accelerometer.needle</object-name>
  <property>accelerations/pilot-gdamped</property>
  <factor>45</factor>
  <center>
   <x-m>0</x-m>
   <y-m>0</y-m>
   <z-m>0</z-m>
  </center> 
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>
 
 <animation>
  <type>rotate</type>
  <object-name>min.needle</object-name>
  <property>gmeter/min</property>
  <factor>45</factor>
  <center>
   <x-m>0</x-m>
   <y-m>0</y-m>
   <z-m>0</z-m>
  </center> 
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>
 
 <animation>
  <type>rotate</type>
  <object-name>max.needle</object-name>
  <property>gmeter/max</property>
  <factor>45</factor>
  <center>
   <x-m>0</x-m>
   <y-m>0</y-m>
   <z-m>0</z-m>
  </center> 
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>
 
     <animation>
        <type>pick</type>
        <object-name>button</object-name>
        <action>
            <button>0</button>
			<repeatable>false</repeatable>
            <binding>
            	<command>nasal</command>
				<script>b707.gmeter_reset();</script>
			</binding>
        </action>
    </animation>
 
</PropertyList>