<?xml version="1.0" encoding="UTF-8" ?>

<!-- KC-137R EADI -->

<PropertyList>

	<path>AI.ac</path>
	
	<model>
		<path>VSI.xml</path>
		<offsets>
			<z-m>-0.025</z-m>
		</offsets>
	</model>

	<!-- ANIMATIONS -->
	<!-- Lighting -->
<!--	<animation>
		<name>Cockpit illumination</name>
		<type>material</type>
		<object-name>Border</object-name>
		<object-name>Off</object-name>
		<emission>
			<red>0.5</red>
			<green>0.5</green>
			<blue>0.5</blue>
			<factor-prop>controls/lighting/cockpit</factor-prop>
		</emission>
	</animation>-->
	
    <animation>
        <type>translate</type>
        <object-name>yoke-pos</object-name>
        <property>controls/flight/aileron</property>
        <factor>0.0258</factor>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>
	
    <animation>
        <type>translate</type>
        <object-name>yoke-pos</object-name>
        <property>controls/flight/elevator</property>
        <factor>0.0258</factor>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>-1</z>
        </axis>
    </animation>
	
	<animation>
		<type>select</type>
        <object-name>yoke-pos</object-name>
		<condition>
			<or>
				<property>gear/gear[1]/wow</property>
				<property>gear/gear[2]/wow</property>
			</or>
		</condition>
	</animation>
	
	<!-- Power on/off -->
	<animation>
		<name>Power on/off</name>
		<type>select</type>
		<object-name>Off</object-name>
		<condition>
			<less-than>
				<property>systems/electrical/outputs/efis</property>
				<value>15</value>
			</less-than>
		</condition>
	</animation>
	
	<!-- Flight Director System -->
    <animation>
        <type>select</type>
        <object-name>FDroll_rembrandt</object-name>
        <object-name>FDpitch_rembrandt</object-name>
        <condition>
			<and>
				<property>sim/rendering/rembrandt/enabled</property>
				<equals>
					<property>it-autoflight/output/fd2</property>
					<value>1</value>
				</equals>
				<not><property>gear/gear[1]/wow</property></not>
				<not><property>gear/gear[2]/wow</property></not>
				<less-than>
					<property>orientation/roll-deg</property>
					<value>45</value>
				</less-than>
				<greater-than>
					<property>orientation/roll-deg</property>
					<value>-45</value>
				</greater-than>
				<less-than>
					<property>orientation/pitch-deg</property>
					<value>45</value>
				</less-than>
				<greater-than>
					<property>orientation/pitch-deg</property>
					<value>-30</value>
				</greater-than>
			</and>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>FDroll</object-name>
        <object-name>FDpitch</object-name>
        <condition>
			<and>
				<not><property>sim/rendering/rembrandt/enabled</property></not>
				<equals>
					<property>it-autoflight/output/fd2</property>
					<value>1</value>
				</equals>
				<not><property>gear/gear[1]/wow</property></not>
				<not><property>gear/gear[2]/wow</property></not>
				<less-than>
					<property>orientation/roll-deg</property>
					<value>45</value>
				</less-than>
				<greater-than>
					<property>orientation/roll-deg</property>
					<value>-45</value>
				</greater-than>
				<less-than>
					<property>orientation/pitch-deg</property>
					<value>45</value>
				</less-than>
				<greater-than>
					<property>orientation/pitch-deg</property>
					<value>-30</value>
				</greater-than>
			</and>
        </condition>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>FDpitch</object-name>
        <object-name>FDpitch_rembrandt</object-name>
        <property>it-autoflight/fd/pitch-bar</property>
        <factor>0.0005</factor>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>FDroll</object-name>
        <object-name>FDroll_rembrandt</object-name>
        <property>it-autoflight/fd/roll-bar</property>
        <factor>0.0002</factor>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

	<!-- Attitude indicator -->
	<animation>
		<name>Attitude indicator</name>
		<type>texmultiple</type>
		<object-name>AI</object-name>
		<transform>
			<subtype>textranslate</subtype>
			<property>orientation/pitch-deg</property>
			<factor>0.00314</factor>
			<axis>
				<x>0</x>
				<y>1</y>
			</axis>
		</transform>
		<transform>
			<subtype>texrotate</subtype>
			<property>orientation/roll-deg</property>
			<axis>
				<x>0</x>
				<y>0</y>
				<z>-1</z>
			</axis>
			<center>
				<x>0.25</x>
				<y>0.5</y>
			</center>
		</transform>
	</animation>

	<animation>
		<name>Attitude indicator roll pointer</name>
		<type>rotate</type>
		<object-name>RollPtr</object-name>
		<property>orientation/roll-deg</property>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
	</animation>

	<!-- ILS guide -->
	<animation>
		<name>ILS glideslope guide pointer translate</name>
		<type>translate</type>
		<object-name>GSPtr</object-name>
		<property>instrumentation/nav[0]/gs-needle-deflection</property>
		<factor>0.00272</factor>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>

	<!-- Altitudes -->
	<text>
		<name>Minimums</name>
		<offsets>
			<x-m>0.0002</x-m>
			<y-m> 0.06</y-m>
			<z-m> 0.054</z-m>
		</offsets>
		<alignment>right-center</alignment>
		<axis-alignment>yz-plane</axis-alignment>
		<type type="string">number-value</type>
		<format type="string">DH%03.0f</format>
		<property>instrumentation/mk-viii/inputs/arinc429/decision-height</property>
		<font>helvetica_bold.txf</font>
		<character-size>0.005</character-size>
		<character-aspect-ratio type="double">1.2</character-aspect-ratio>
	</text>

	<text>
		<name>Radar Altitude</name>
		<offsets>
			<x-m>0.0002</x-m>
			<y-m> 0.06</y-m>
			<z-m> 0.048</z-m>
		</offsets>
		<alignment>right-center</alignment>
		<axis-alignment>yz-plane</axis-alignment>
		<type type="string">number-value</type>
		<format type="string">%4.0f</format>
		<property>position/altitude-agl-ft</property>
		<font>helvetica_bold.txf</font>
		<character-size>0.007</character-size>
		<character-aspect-ratio type="double">1.2</character-aspect-ratio>
	</text>
	<animation>
		<type>select</type>
		<object-name>Radar Altitude</object-name>
		<condition>
		    <less-than>
			<property>position/altitude-agl-ft</property>
			<value>2500</value>
		    </less-than>
		</condition>
	</animation>
		

	<animation>
		<name>Green text</name>
		<type>material</type>
		<object-name>Minimums</object-name>
		<emission>
			<red>0</red>
			<green>1</green>
			<blue>0</blue>
		</emission>
	</animation>
	<animation>
		<name>White text</name>
		<type>material</type>
		<object-name>Radar Altitude</object-name>
		<emission>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</emission>
	</animation>

</PropertyList>
