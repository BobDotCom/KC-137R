<PropertyList>
    <path>radial.ac</path>
	
    <animation>
		<name>Panel lighting</name>
		<type>material</type>
		<object-name>face</object-name>
		<object-name>knob</object-name>
		<emission>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
			<factor-prop>/systems/electrical/outputs/panel-dim</factor-prop>
		</emission>
	</animation>

	<animation>
	  <type>textranslate</type>
	  <object-name>digit100</object-name>
	  <property>/instrumentation/nav[0]/radials/selected-deg</property>
	  <factor>0.001</factor>
	  <step>100</step>
	  <axis>
		<x>0</x>
		<y>1</y>
		<z>0</z>
	  </axis>
	</animation>
	<animation>
	  <type>textranslate</type>
	  <object-name>digit10</object-name>
	  <property>/instrumentation/nav[0]/radials/selected-deg</property>
	  <factor>0.01</factor>
	  <step>10</step>
	  <axis>
		<x>0</x>
		<y>1</y>
		<z>0</z>
	  </axis>
	</animation>
	<animation>
	  <type>textranslate</type>
	  <object-name>digit1</object-name>
	  <property>/instrumentation/nav[0]/radials/selected-deg</property>
	  <factor>0.1</factor>
	  <step>1</step>
	  <axis>
		<x>0</x>
		<y>1</y>
		<z>0</z>
	  </axis>
	</animation>
	
	<animation>
	  <type>pick</type>
	  <object-name>knob-octal</object-name>
	  <action>
		<button>0</button>
		<repeatable>true</repeatable>
		<binding>
		  <command>property-adjust</command>
		  <property>/instrumentation/nav[0]/radials/selected-deg</property>
		  <step>10</step>
		  <min>1</min>
		  <max>361</max>
		  <wrap>false</wrap>
		</binding>
	  </action>
	  <action>
		<button>1</button>
		<repeatable>true</repeatable>
		<binding>
		  <command>property-adjust</command>
		  <property>/instrumentation/nav[0]/radials/selected-deg</property>
		  <step>-10</step>
		  <min>1</min>
		  <max>361</max>
		  <wrap>false</wrap>
		</binding>
	  </action>
	  <action>
		<button>3</button>
		<repeatable>true</repeatable>
		<binding>
		  <command>property-adjust</command>
		  <property>/instrumentation/nav[0]/radials/selected-deg</property>
		  <step>1</step>
		  <min>1</min>
		  <max>361</max>
		  <wrap>false</wrap>
		</binding>
	  </action>
	  <action>
		<button>4</button>
		<repeatable>true</repeatable>
		<binding>
		  <command>property-adjust</command>
		  <property>/instrumentation/nav[0]/radials/selected-deg</property>
		  <step>-1</step>
		  <min>1</min>
		  <max>361</max>
		  <wrap>false</wrap>
		</binding>
	  </action>
	</animation>

</PropertyList>
