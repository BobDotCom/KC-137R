<PropertyList>

<path>fuel.ac</path>

	<animation>
		<type>material</type>
		<object-name>face</object-name>
		<texture>fuelface2.png</texture>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>face</object-name>
		<object-name>needle</object-name>
		<condition>
			<less-than><property>systems/electrical/outputs/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.6</red>
			<green>0.4</green>
			<blue>0.3</blue>
			<factor-prop>/systems/electrical/outputs/engineer-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>face</object-name>
		<object-name>needle</object-name>
		<object-name>shadow</object-name>
		<condition>
			<not><property>sim/rendering/rembrandt/enabled</property></not>
			<property>systems/electrical/outputs/engineer-dim</property>
		</condition>
		<emission>
		  <red>0.8</red>
		  <green>0.8</green>
		  <blue>0.8</blue>
		  <factor-prop>/systems/electrical/outputs/engineer-dim</factor-prop>
		</emission>
	</animation>	

	<animation>
		<type>noshadow</type>
		<object-name>shadow</object-name>
		<condition>
			<not><property>sim/rendering/rembrandt/enabled</property></not>
			<property>systems/electrical/outputs/cabin-dim</property>
		</condition>
	</animation>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>shadow</object-name>
  </effect>

	<animation>
		<type>rotate</type>
		<object-name>needle</object-name>		
		<condition>		
			<greater-than>
				<property>b707/ess-bus</property>
				<value>20</value>
			</greater-than>
		</condition>
		<property>consumables/fuel/tank[4]/level-kg</property>
		<interpolation>
		  <entry><ind>    0.0</ind><dep>   0.0</dep></entry>
		  <entry><ind>13000.0</ind><dep> 303.0</dep></entry>
		</interpolation>
		<axis>
		  <x>0</x>
		  <y>1</y>
		  <z>0</z>
		</axis>
	</animation>
	
<animation>
	<type>select</type>
	<object-name>digit10</object-name>
	<object-name>digit1</object-name>
	<object-name>digit.1</object-name>
	<object-name>digit.</object-name>
	<condition>		
		<greater-than>
			<property>b707/ess-bus</property>
			<value>20</value>
		</greater-than>
	</condition>
</animation>
	
<animation>
  <type>textranslate</type>
  <object-name>digit10</object-name>
  <property>consumables/fuel/tank[4]/level-kg</property>
  <factor>0.00001</factor>
  <step>10000</step>
  <axis>
    <x>0</x>
    <y>1</y>
    <z>0</z>
  </axis>
</animation>
<animation>
  <type>textranslate</type>
  <object-name>digit1</object-name>
  <property>consumables/fuel/tank[4]/level-kg</property>
  <factor>0.0001</factor>
  <step>1000</step>
  <axis>
    <x>0</x>
    <y>1</y>
    <z>0</z>
  </axis>
</animation>
<animation>
  <type>textranslate</type>
  <object-name>digit.1</object-name>
  <property>consumables/fuel/tank[4]/level-kg</property>
  <factor>0.001</factor>
  <step>100</step>
  <axis>
    <x>0</x>
    <y>1</y>
    <z>0</z>
  </axis>
</animation>

</PropertyList>
